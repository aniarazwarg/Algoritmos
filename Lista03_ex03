using System;
//Construa um programa que leia o número de horas trabalhadas diárias (NH) de um funcionário por um período de 30 dias (ele trabalhou todos os 30 dias) e apresente o total de horas trabalhadas por ele nesse período. 
class Program 
{
  public static void Main (string[] args) 
  {
    double NH=0,HT=0;
    for(int i=1; i<=30; i++)
    {
     do
      {
      Console.Write("Quantas horas foram trabalhadas hoje? ",i);
      NH = double.Parse(Console.ReadLine());
      }while(NH<=0);
      HT=HT+NH;
  
    }
    Console.WriteLine("O total de horas trabalhadas é: {0}",HT);
  
    
  }
}

