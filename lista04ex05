using System;
// Faça um algoritmo que calcule a soma dos primeiros 50 números pares. Este algoritmo não recebe  valor do teclado. Os primeiros número pares são: 2, 4, 6, ...  
class Program {
  public static void Main (string[] args) {

    int i, par=2, soma=0;

for (i=1; i<=50; i++)
{
soma+= par;
par+=2;
}
 Console.WriteLine("Soma dos primeiros 50 pares: {0}", soma);
   
  }
}