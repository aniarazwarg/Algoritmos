using System;
/*Construa um algoritmo que leia o código de um livro (CL) e apresente a categoria do livro, conforme a tabela abaixo: */
class Program {
  public static void Main (string[] args) {
    char CL;
    Console.Write("Qual o código do livro? ");
CL=char.Parse(Console.ReadLine().ToUpper());
 
    switch (CL)
    {
      
      case 'A':
          Console.WriteLine("Categoria: Ficção");
          break;
        
      case 'B':
          Console.WriteLine("Categoria : Não-Ficção");
          break;
      default:
        Console.WriteLine("Categoria inválida.");
        break;
    }

    }
}